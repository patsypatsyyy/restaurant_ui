<mvc:View controllerName="patsy.personal.restaurant.controller.Main" displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt" core:require="{
		formatter: 'patsy/personal/restaurant/model/formatter'
	}">

    <Page id="page">
        <headerContent>
            <core:Fragment fragmentName="patsy.personal.restaurant.view.fragments.MainHeaderContent" type="XML" />
        </headerContent>
        <content>
            <Panel class="sapUiContentPadding" width="100%" height="100%">
                <VBox id="vbSearchContainer" alignItems="Center" justifyContent="Center" width="100%" height="55%">
                    <Avatar src="./images/website-logo.png" displayShape="Square" displaySize="Custom" customDisplaySize="10rem"></Avatar>
                    <Title class="sapUiSmallMarginTop"></Title>
                    <SearchField width="30rem" placeholder="{i18n>txtSearch}"></SearchField>
                </VBox>
                <VBox id="vbFeaturedContainer" alignItems="Center" justifyContent="Center" width="100%" class="">
                    <Title text="{i18n>txtFeatured}"></Title>
                    <HBox >
                        <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" backgroundImage="./images/restaurant-image-01.jpg" frameType="OneByOne" press="onPress">
                            <TileContent footer="Currently Open" frameType="TwoByOne">
                                <NewsContent contentText="McDonalds" subheader="5km away"/>
                            </TileContent>
                        </GenericTile>
                        <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" backgroundImage="./images/restaurant-image-02.jpeg" frameType="OneByOne" press="onPress">
                            <TileContent footer="Currently Open" frameType="TwoByOne">
                                <NewsContent contentText="McDonalds" subheader="10km away"/>
                            </TileContent>
                        </GenericTile>
                        <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" backgroundImage="./images/restaurant-image-01.jpg" frameType="OneByOne" press="onPress">
                            <TileContent footer="Currently Open" frameType="TwoByOne">
                                <NewsContent contentText="McDonalds" subheader="5km away"/>
                            </TileContent>
                        </GenericTile>
                        <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" backgroundImage="./images/restaurant-image-02.jpeg" frameType="OneByOne" press="onPress">
                            <TileContent footer="Currently Open" frameType="TwoByOne">
                                <NewsContent contentText="McDonalds" subheader="10km away"/>
                            </TileContent>
                        </GenericTile>
                        <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" backgroundImage="./images/restaurant-image-01.jpg" frameType="OneByOne" press="onPress">
                            <TileContent footer="Currently Open" frameType="TwoByOne">
                                <NewsContent contentText="McDonalds" subheader="5km away"/>
                            </TileContent>
                        </GenericTile>
                    </HBox>
                </VBox>
            </Panel>
        </content>
    </Page>
</mvc:View>
